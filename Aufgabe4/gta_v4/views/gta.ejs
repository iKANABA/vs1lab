<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>GeoTagApp</title>
	<link rel='stylesheet' href='./stylesheets/style.css'/>
</head>

<body>

<header class="header">
	<img src="./images/location.png" width="100"
		 alt="an image of a map and location">
	<h1>GeoTagApp</h1>
	<nav>
		<a href="#">About</a> | <a href="#">Help</a> | <a
				href="/">Home</a>
	</nav>
</header>

<main class="row">

	<section class="tagging Gtagging">
		<h2>Tagging</h2>

		<!-- ############### Aufgabe1a Form1 Start -->
		<form id="tag-form" action="/tagging" method="post">

			<fieldset>
				<legend>Enter new GeoTag</legend>

				<label for="latitude">latitude</label>
				<p><input type="number" name="latitude" id="latitude" step="0.000001" placeholder="e.g. 49.01379" value="<%=lat%>" required="true"></p>

				<label for="longitude">longitude</label>
				<P><input type="number" name="longitude" id="longitude" step="0.000001" placeholder="e.g. 8.390071" value="<%=long%>" required="true"></p>


				<label for="name">name</label>
				<p><input type="text" name="name" id="name" maxlength="10" placeholder="type in a name" required="true"></p>


				<lable for="hashtag">hashtag</lable>
				<p><input type="text" name="hashtag" id="hashtag" maxlength="11" pattern="[#a-z]{4,11}" placeholder="# + min 3, max 10 letters" required="true"></p>


				<button type="submit" value="submit" name="new-tag">submit</button>

			</fieldset>

		</form>
		<!-- ############### Aufgabe1a Form1 Ende -->

	</section>

	<section class="discovery Gdiscovery">
		<h2>Discovery</h2>

		<!-- ############### Aufgabe1a Form2 Start -->
		<form id="filter-form" action="/discovery" method="post">

			<fieldset>
				<legend>
					<label for="searchQuery">Filter by Searchterm</label>
				</legend>

				<input type="text" name="searchQuery" id="searchQuery" placeholder="search term!">

				<input type="number"  name="hiddenLatitude"id="hiddenLatitude" placeholder="latitude2" value="<%=hlat%>" step="0.00001" hidden="" >

				<input type="number"  name="hiddenLongitude" id="hiddenLongitude" placeholder="longitude" value="<%=hlong%>" step="0.00001" hidden="" >

				<input type="submit" name="filter"value="go filter">
				<input type="submit" name="throw"value="delete">
				<input type="submit" name="all"value="show all">
			</fieldset>

		</form>
		<!-- ############### Aufgabe1a Form2 Ende -->
		<div class="row">
			<div id="ser" class="taglist">
				<ul id="results">
					<% if (tagliste !== undefined) tagliste.forEach(function(gtag) { %>
						<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
					<% }); %>
				</ul>
			</div>

			<div class="tagmap">
				<img id="result-img" data-tags=<%-filterarr%> src="./images/mapview.jpg" alt="a map with locations"/>
				<div class="caption" id="test">Result map</div>
			</div>
		</div>

	</section>

</main>

<footer class="footer">
	<span>2024 by LKIT</span>
</footer>
<!-- Load JavaScripts
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="./javascripts/geotagging.js"></script>

</body>
</html>

