	<!DOCTYPE html>
	<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>GeoTagApp</title>
		<link   href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>
	</head>

	<body>

	<header>
		<img src="..//images/location.png" width="100"
			 alt="an image of a map and location">
		<h1>GeoTagApp</h1>
		<nav>
			<a href="#">About</a> | <a href="#">Help</a> | <a
					href="/">Home</a>
		</nav>
	</header>

	<main class="row">

		<section class="tagging col-3">
			<h2>Tagging</h2>

			<!-- ############### Aufgabe1a Form1 Start -->
			<form id="tag-form" action="/tagging" method="post">
				<fieldset>
					<legend>Enter new GeoTag</legend>

					<label for="latitude">latitude</label>
					<input type="number" name="latitude" id="latitude" placeholder="latitude" step="0.00001" value="<%=lat%>" required="true">

					<label for="longitude">longitude</label>
					<input type="number" name="longitude" id="longitude" placeholder="longitude" step="0.00001" value="<%=long%>" required="true" >

					<label for="name">name</label>
					<input type="text" name="name" id="name" placeholder="some name" maxlength="10" required="true">

					<label for="hashtag">hashtag</label>
					<input type="text" name="hashtag" id="hashtag" placeholder="# + max. 10 letters" maxlength="11" value="#"pattern="#(.*)">

					<input type="Submit" id="submitter"value="submit">

				</fieldset>
			</form>

			<!-- ############### Aufgabe1a Form1 Ende -->

		</section>

		<section class="discovery col-7">
			<h2>Discovery</h2>

			<!-- ############### Aufgabe1a Form2 Start -->
			<form id="filter-form" action="/discovery" method="post">
				<fieldset>
					<legend>
						<label for="searchQuery">Filter by Searchterm</label>
					</legend>

					<input type="text" name="searchQuery" id="searchQuery" placeholder="search term!">

					<input type="number"  name="hiddenLatitude"id="hiddenLatitude" placeholder="latitude2" value="<%=hlat%>" step="0.00001" hidden="" >

					<input type="number"  name="hiddenLongitude" id="hiddenLongitude" placeholder="longitude" value="<%=hlong%>" step="0.00001" hidden="" >

					<input type="submit" id="filterid"name="filter"value="go filter">
					<input type="Submit" id="deleteid"name="throw"value="delete">
					<input type="Submit" id="allid"name="all"value="show all">
				</fieldset>
			</form>

			<!-- ############### Aufgabe1a Form2 Ende -->

			<div class="row">
				<div id="ser" class="taglist col-4">
					<ul id="results">

						<% if (tagliste !== undefined) tagliste.forEach(function(gtag) { %>

							<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
						<% }); %>

					</ul>
				</div>
				<div id="558" name="plop"></div>
				<div class="tagmap col-6">

					<img id="result-img" data-tags=<%-filterarr%>  src="./images/mapview.jpg" alt="a map with locations"/>
					<div class="caption" id="date1">Result map</div>
					<div class="caption" id="date2">Result map2</div>
				</div>
			</div>
		</section>

	</main>

	<footer>
		<span>2017 by LKIT</span>
	</footer>

	<!-- Load JavaScripts ================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<script src="./javascripts/geotagging.js"></script>
	</body>
	</html>


